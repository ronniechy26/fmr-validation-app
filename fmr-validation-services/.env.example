PORT=3000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/fmr_validation

# ABEMIS upstream configuration
ABEMIS_BASE_URL=https://abemis.staging.bafe.gov.ph
ABEMIS_API_KEY=xxxxyourapikeyxxxxxx
ABEMIS_PROJECT_TYPES=Farm-to-Market Road

# Auth
JWT_SECRET=replace-me
JWT_REFRESH_SECRET=replace-me-too
JWT_EXPIRES_IN_SECONDS=3600
JWT_REFRESH_EXPIRES_IN_SECONDS=86400

# Seed source: "abemis" (default) or "seed" to use local fixtures only
ABEMIS_SEED_MODE=abemis
# Force reseed on startup (clears projects/forms tables first)
ABEMIS_SEED_RESET=false
# Interval for scheduled ABEMIS refresh (ms). Set to 0 to disable background sync.
ABEMIS_SYNC_INTERVAL_MS=3600000
